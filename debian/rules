#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

clean:
	dh_testdir
	dh_testroot
	dh_clean 
	rm -f pgdumper

binary:
	cp pgdumper.sh pgdumper
	chmod +x pgdumper
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installdebconf
	dh_installman pgdumper.8
	dh_compress 
	dh_fixperms
	
	dh_installdeb
	
	dh_installdirs
	dh_install
	
	dh_gencontrol
	dh_md5sums
	
	dh_builddeb
	rm -f pgdumper

.PHONY: build clean binary
