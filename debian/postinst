#!/bin/sh
# postinst script for pgdumper
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

#DEBHELPER#

. /usr/share/debconf/confmodule

CFGFILE=/etc/pgdumper.conf

case "$1" in
    configure)
        echo "# Configuration for pgdumper(8)" > $CFGFILE
        echo "# THIS FILE GENERATED BY DEBCONF" >> $CFGFILE
        echo "# Run dpkg-reconfigure pgdumper to change it" >> $CFGFILE

        db_get pgdumper/annoy
        echo "ANNOY=${RET}" >> $CFGFILE

        db_get pgdumper/backupsstoredfor
        echo "BACKUPSSTOREDFOR=${RET}" >> $CFGFILE

        db_get pgdumper/cronfrequency
        echo "# Cron for pgdumper" > /etc/cron.d/pgdumper
        echo "${RET}  postgres  /usr/bin/pgdumper" >> /etc/cron.d/pgdumper

        mkdir -p /var/backups/pg
        chown postgres:postgres /var/backups/pg
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

db_stop
exit 0
